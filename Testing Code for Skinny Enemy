using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class EnemyHealth : MonoBehaviour {

	public float health = 50;
	public float NineMMDmg = 10;

	void Start () {
		
	}

	void Update () {

		Debug.Log(health);

		if (health <= 0)
			Destroy (gameObject);

	}

	void OnCollisionEnter (Collision col) {
		if (col.gameObject.tag == "9mm") {
			Destroy (col.gameObject);
			health = (health - NineMMDmg);

			//add collisions for other types of attacks with different tags for different bullet damage when needed.
		}
	}
}
